{% macro programItem(speach) %}
  {% if speach.workshops %}
    <div class="groupingSession mt-3">
      <div class="col-10 offset-2 Summit2019_Session_Header">{{ speach.type }}</div>
    </div>
    {% endif %}

  <div class="ec-europcom-program__item">

    

    {{ speach.time }} 

    {% if speach.workshops %}
    <strong>{{ speach.title }}</strong>
    <div class="ec-europcom-program__item__workshops">
        
      
        
          {% for workshop in speach.workshops %}
          <div>
            <div class="ec-europcom-program__item__img ec-europcom-program__item__img--{{ workshop.category | lower }}">
              <img src="/images/{{ workshop.category | lower }}.svg" alt="{{ workshop.category | lower }} theme logo"/>
            </div>
            <details>
              <summary>{{ workshop.title }}</summary>
              {{ workshop.more }}
            </details>
          </div>
          {% endfor %}
     
        
      
     
    </div>
    {% else %}
      <details>
        <summary>{{ speach.title }}</summary>

        <div class="ec-europcom-program__item__description my-3 p-3">
          {{ speach.description }}

          <h4 class="mt-3">Speakers</h4>
          <ul class="ec-europcom-program__speakers-list">
            <li class="ec-europcom-program__speakers-list__item">
              <img class="rounded-circle img-fluid" alt="Mr. Delores Murphy portrait" src="https://fakeface.rest/face/view/0?minimum_age=25">
                <div class="ec-europcom-program__speakers-list__item__description text-center">
                  <small class="text-uppercase">Speaker</small><br/>
                  <strong>Mr. Delores Murphy</strong>
                  <div>Direct Web Planner, Goyette, White and Lakin&#8203;</div>
                </div>
            </li>
            
          </ul>
        </div>

      </details>
    {% endif %}

    

        
  </div>
{% endmacro %}


<div class="mainContent">
  
  

  <div class="action-buttons">
    <button class="btn pull-right" id="PrintButton" title="Print"> 
      <i class="fa fa-2x fa-print">&#8203;&#8203;&#8203;</i>
    </button> <button class="btn pull-right" id="DownloadPDF" title="Download PDF"> 
      <i class="fa fa-2x fa-file-export">&#8203;&#8203;&#8203;</i>
    </button>
  </div>
  
  <div class="Summit2019_Prog_Main">

      <div>
        <a href="#firstday" class="btn">Monday 7 December 2020</a>
        <a href="#secondday" class="btn">Thursday 8 December 2020</a>
      </div>

        <button id="detailedAgenda">Detailed</button>
        <button id="summarydAgenda">Summary</button>

        <div class="groupingSession mt-5">
          <div class="col-12 Summit2019_Session_Date">Monday 7 December 2020</div>
        </div>
      
        {% for speach in program7th %}
          {{ programItem(speach) }}
        {% endfor %}

        <div class="groupingSession mt-5">
          <div class="col-12 Summit2019_Session_Date">Thursday 8 December 2020</div>
        </div>
      
        {% for speach in program8th %}
          {{ programItem(speach) }}
        {% endfor %}

  </div>
</div>
