<ul id="og-grid" class="og-grid row speakers-grid">

  {% for speaker in speakers %}
  <div class="col-sm-6 col-lg-4 col-xl-3">
    <a href="#" data-largesrc="{{ speaker.picture }}" data-title="{{ speaker.name }}" data-job="{{ speaker.jobTitle }}, {{ speaker.company }}​​" data-description="{{ speaker.bio }}" data-link_url="" data-link_label="" >
      <img class="img-fluid" alt="{{ speaker.name }} portrait" src="{{ speaker.picture }}" />
      <div class="speakerDescription">
        <div class="speaker_role text-uppercase">{{ speaker.role }}</div>
        <div class="speaker_name">{{ speaker.name }}</div>
        <div class="speaker_jobTitle">{{ speaker.jobTitle }}, {{ speaker.company }}​</div>
      </div>
    </a>
  </div>
  {% endfor %}

</ul>

<script defer>$(document).ready(function() {
		Grid.init();
	});</script>
 