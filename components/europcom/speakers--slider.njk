<div class="row mt-5" id="Speakers-container">
  <div class="col-12">
    <h2>Meet our first speakers.</h2>
    <div class="slide">
      {% for speaker in speakers %}
      <div class="dfwp-item" >
        <img alt="{{ speaker.name }} portrait" src="{{ speaker.picture }}">
        <div class="speakerDescription" >
          <div class="speaker_name">{{ speaker.name }}</div>
          <div class="speaker_jobTitle">{{ speaker.jobTitle }}, {{ speaker.company }}</div>
        </div>
      </div>
      {% endfor %}
    </div>
		<div class="ec-europcom-align-center">
			<a id="declarationLink" class="btn mt-3" href="">View more</a>
		</div>
  </div>
</div>

<script src="{{ '/europcom/slick.min.js' | path }}"></script>
<script type="text/javascript"> 
		$(document).ready(function(){
			$('.slide').slick({
			  	infinite: true,
			  	initialSlide:0,
			  	speed: 300,
			  	slidesToShow: 3,
			  	slidesToScroll: 1,
			  	autoplay: true,
//			  	autoplaySpeed: 2000,
//				centerMode: true,
//			  	centerPadding: '50px',
			  	prevArrow:'<button type="button" class="fa fa-2x fa-caret-left slick-prev ">Previous</button>',
			  	nextArrow:'<button type="button" class="fa fa-2x fa-caret-right slick-next ">Next</button>',			  	
				responsive: [
					{
					  breakpoint: 1024,
					  settings: {
					    slidesToShow: 2,
					    slidesToScroll: 1,
						centerMode: false
					  }
					},
					{
					  breakpoint: 900,
					  settings: {
					    slidesToShow: 2,
					    slidesToScroll: 1,
						centerMode: false
					  }
					},
					{
					  breakpoint: 768,
					  settings: {
					    slidesToShow: 1,
					    slidesToScroll: 1,
						centerMode: false			    
					  }
					}
				]	
			});
		});
	</script>